{% extends 'PAGEDemoBundle:Layout:layout_dashboard.html.twig' %}

{% block title "Apoderados"%}

{% block menu_admin_alumnos %}class="active"{% endblock %}

{% block datos %}
    <h1 class="page-header">Alumno&nbsp;<i class="fa fa-angle-right"></i>&nbsp;<small>Apoderados</small></h1>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Relation</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Area</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('agent_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.rut }}</td>
                <td>{{ entity.relation }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.area }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('agent_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('agent_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="modal-footer">
        <a href="{{ path('agent_new') }}" class="btn btn-mint">Nuevo</a> 
    </div>

{% endblock %}
