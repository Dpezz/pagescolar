{% block institucion_perfil %}

	<form action="{{ path('institucion_edit') }}" method="POST">

	    <div class="row">
			<div class="col-md-2">
				<h4 class="text-center">
					{% if not image %}
		        		<img src="{{asset('bundles/pagedemo/images/profile.png')}}" class="img-thumbnail" class="img-thumbnail"  width="150px" height="150px">
		        	{% else %}
		        		<img src="{{asset('users/' ~ app.user.parent ~ '/images/' ~ dataI.id )}}" class="img-rounded"  style="max-width:150px;max-height:150px">
	        		{% endif %}
		    	</h4>
			</div>
			<div class="col-md-10">
				<div class="form-group">
					<label class="text-muted">Nombre</label>
	        		<input type="text" class="form-control" name="name" value="{{app.user.username}}" readonly>
	      		</div>
	      		<div class="form-group">
					<label class="text-muted">E-mail</label>
		        	<input type="text" class="form-control" value="{{app.user.email}}" readonly>
		      	</div>
		      	
			</div>
		</div>
	   
		<hr>

    	<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<label class="text-muted">RBD</label>
		        	<input type="text" class="form-control" name="rbd" value="{{dataI.rbd}}" required autofocus>
		      	</div>
	      	</div>
	      	<div class="col-md-6">
		  		<div class="form-group">
		  			<label class="text-muted">RUT Sostenedor</label>
		        	<input type="text" class="form-control" name="rut" value="{{dataI.rut}}" required autofocus>
		      	</div>
	      	</div>
		</div>

		<div class="form-group">
			<label class="text-muted">Dirección</label>
        	<input type="text" class="form-control" name="address" value="{{dataI.address}}">
      	</div>

      	<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<label class="text-muted">Teléfono/Celular</label>
		        	<input type="text" class="form-control" value="{{app.user.fono}}" readonly>
		      	</div>
      		</div>
	      	<div class="col-md-6">
				<div class="form-group">
					<label class="text-muted">Fax</label>
		        	<input type="text" class="form-control" name="fax" value="{{dataI.fax}}">
	      		</div>
      		</div>
      	</div>

		<div class="form-group">
			<label class="text-muted">Representante Legal</label>
        	<input type="text" class="form-control" name="rep" value="{{dataI.rep}}">
      	</div>
		

      	<div class="modal-footer">
      		<a href="{{ path('print_institucion') }}" class="btn btn-mint" type="button"><i class="fa fa-download"></i>&nbsp;Descargar</a>
      		<button class="btn btn-mint" type="submit"><i class="fa fa-save"></i>&nbsp;Guardar</button>
      	</div>
	</form>
{% endblock %}