{% extends 'PAGEDemoBundle:Layout:layout_dashboard.html.twig' %}

{% block title "Docentes"%}

{% block menu_admin_docentes %}class="active"{% endblock %}

{% block datos %}
    <h1 class="page-header">Docentes</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Rut</th>
                <th>Nombre</th>
                <th>Funci√≥n</th>
                <th>Fono</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('teacher_show', { 'id': entity.id }) }}" class="badge">{{ loop.index }}</a></td>
                <td>{{ entity.rut }}</td>
                <td>{{ entity.name }} {{ entity.lastname }} {{ entity.mlastname }}</td>
                <td>{{ entity.inteacher.role }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    <a href="{{ path('teacher_show', { 'id': entity.id }) }}" class="glyphicon glyphicon-eye-open"></a>&nbsp;
                    <a href="{{ path('schedule',{'id_teacher': entity.id }) }}" class="glyphicon glyphicon-time"></a>&nbsp;
                    <a href="{{ path('teacher_edit', { 'id': entity.id }) }}" class="glyphicon glyphicon-edit"></a>&nbsp;
                    <a href="{{ path('teacher_edit', { 'id': entity.id }) }}" class="glyphicon glyphicon-trash text-danger"></a>&nbsp;
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   <div class="modal-footer">
        <a href="{{ path('teacher_new') }}" class="btn btn-mint">Nuevo</a>
   </div>
    {% endblock %}
