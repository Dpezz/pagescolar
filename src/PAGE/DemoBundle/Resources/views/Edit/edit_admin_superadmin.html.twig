{% block admin_superadmin %}

    <div class="table-responsive">
      	<table class="table table-hover">
	        <thead>
	          <tr>
	            <th>#</th>
	            <th>Username</th>
	            <th>Tel√©fono</th>
	            <th>Email</th>
	            <th>Rol</th>
	            <th>Fecha Ingreso</th>
	            <th></th>
	          </tr>
	        </thead>
	        <tbody>
	          {% for item in dataU|sort %}
	          <tr>
	            <td><span class="badge">{{loop.index}}</span></td>
	            <td><span class="text-mint"><strong>{{item.username}}</strong></span></td>
	            <td>{{item.fono}}</td>
	            <td>{{item.email}}</td>
	            <td>{{item.role}}</td>
	            <td>{{item.createat|date('d/m/Y')}}</td>
	            <td>
	            {% if item.isactive %}
	              <a href="" title="desactivar" ng-click="update('{{item.id}}','{{item.username}}','Desactivar',0)" data-toggle="modal" data-target="#update"><i class="fa fa-toggle-on fa-lg"></i></a>
	            {% else %}
	              <a href="" title="activar" ng-click="update('{{item.id}}','{{item.username}}','Activar',1)" data-toggle="modal" data-target="#update"><i class="fa fa-toggle-off fa-lg"></i></a>
	            {% endif %}

	              <a href="" title="eliminar" ng-click="delete('{{item.id}}','{{item.username}}')" data-toggle="modal" data-target="#delete"><i class="fa fa-trash fa-lg text-danger"></i></a>
	            </td>
	          </tr>
	          {% endfor %}
	        </tbody>
      	</table>
    </div>

	<!-- Modal Delete -->
	<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  	<div class="modal-dialog">
	    	<div class="modal-content">
		      	<div class="modal-header">
		        	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        	<h4 class="modal-title" id="myModalLabel">{[{ title }]}</h4>
		      	</div>
		      	<div class="modal-body">
			      	<form>
			      		<h5 class="text-center">Seguro que desea eliminar a <strong class="text-mint">{[{ name }]}</strong> de PAGESCOLAR?</h5>

			      		<div class="modal-footer">
			        		<a type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-remove"></i>&nbsp;Cerrar</a>
			        		<button class="btn btn-mint" ng-click="delete(-1,-1)"><i class="fa fa-trash"></i>&nbsp;Eliminar</button>
			      		</div>
		      		</form>
	    		</div>
	  		</div>
		</div>
	</div>

	<!-- Modal Update -->
	<div class="modal fade" id="update" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  	<div class="modal-dialog">
	    	<div class="modal-content">
		      	<div class="modal-header">
		        	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        	<h4 class="modal-title" id="myModalLabel">{[{ title }]} Cuenta</h4>
		      	</div>
		      	<div class="modal-body">
			      	<form>
			      		<h5 class="text-center">Seguro que deseas <strong>{[{ title }]}</strong> a <strong class="text-mint">{[{ name }]}</strong> de PAGESCOLAR?</h5>

			      		<div class="modal-footer">
			        		<a type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-remove"></i>&nbsp;Cerrar</a>
			        		<button class="btn btn-mint" ng-click="save()"><i class="fa fa-save"></i>&nbsp;{[{title}]}</button>
			      		</div>
		      		</form>
	    		</div>
	  		</div>
		</div>
	</div>
{% endblock %}