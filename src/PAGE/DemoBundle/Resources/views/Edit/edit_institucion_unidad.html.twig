{% block institucion_unidad %}
	<form action="{{ path('unidad_edit') }}" method="POST">
		
		<div class="form-group">
			<label class="text-muted">Jornada</label>
      {% set items = listaJ|split(',') %}
      <select class="form-control" name="jornada">
        <option value="">-- Jornada --</option>
        {% for item in items %}
          {% if item == dataI.jornada %}
            <option value="{{item}}" selected>{{item}}</option>
          {% else %}
            <option value="{{item}}">{{item}}</option>
          {% endif %}
        {% endfor %}
      </select>
  	</div>

		<div class="form-group">
			<label class="text-muted">Modalidad</label>
          {% set items = listaM|split(',') %}
          <select class="form-control" name="modalidad">
            <option value="">-- Modalidad --</option>
            {% for item in items %}
              {% if item == dataI.modalidad %}
                <option value="{{item}}" selected>{{item}}</option>
              {% else %}
                <option value="{{item}}">{{item}}</option>
              {% endif %}
            {% endfor %}
          </select>
      	</div>

		<div class="form-group">
			<label class="text-muted">Régimen</label>
          {% set items = listaR|split(',') %}
          <select class="form-control" name="regimen">
            <option value="">-- Régimen --</option>
            {% for item in items %}
              {% if item == dataI.regimen %}
                <option value="{{item}}" selected>{{item}}</option>
              {% else %}
                <option value="{{item}}">{{item}}</option>
              {% endif %}
            {% endfor %}
          </select>
      	</div>

      	<br>
      	<div class="page-header">
      		<h5 class="text-muted">Periódo Lectivo</h5>
      	</div>

      	<div class="row">
			<div class="col-md-6">
	            <div class="form-group">
	            	<label class="text-muted">Fecha Inicio</label>
	              <div class='input-group date' id='date-start'>
                {% set fecha = dataI.fechainicio|date('d') ~'/'~dataI.fechainicio|date('m') ~'/'~dataI.fechainicio|date('Y')%}
                    <input type='text' class="form-control" name="finicio" data-date-format="DD/MM/YYYY" value="{{fecha}}">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
	            </div>
      		</div>
	      	<div class="col-md-6">
	      		<div class="form-group">
	      			<label class="text-muted">Fecha Término</label>
		      		<div class='input-group date' id='date-end'>
              {% set fecha = dataI.fechafin|date('d') ~'/'~dataI.fechafin|date('m') ~'/'~dataI.fechafin|date('Y')%}
                <input type='text' class="form-control" name="ffin" value="{{fecha}}">
                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>
      			</div>
      		</div>
      	</div>

      	<div class="modal-footer">
      		<button class="btn btn-mint" type="submit"><i class="fa fa-save"></i>&nbsp;Guardar</button>
      	</div>
	</form>
{% endblock %}