{% extends 'PAGEDemoBundle:Layout:layout_dashboard.html.twig' %}

{% block title "Asignaturas"%}

{% block menu_admin_academico %}class="active"{% endblock %}

{% block datos %}
    <h1 class="page-header">Asignaturas</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>User</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('subject_show', { 'id': entity.id }) }}" class="badge">{{ loop.index }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.user.username }}</td>
                <td>
                    <a href="{{ path('subject_show', { 'id': entity.id }) }}" class="glyphicon glyphicon-eye-open"></a>&nbsp;
                    <a href="{{ path('subject_edit', { 'id': entity.id }) }}" class="glyphicon glyphicon-edit"></a>&nbsp;
                    <a href="{{ path('subject_edit', { 'id': entity.id }) }}" class="glyphicon glyphicon-trash text-danger"></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <div class="modal-footer">
            <a href="{{ path('subject_new') }}" class="btn btn-mint">Nuevo</a>
        </div>
    {% endblock %}
