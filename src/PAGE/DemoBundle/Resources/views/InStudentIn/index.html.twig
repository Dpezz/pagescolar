{% extends 'PAGEDemoBundle:Layout:layout_dashboard.html.twig' %}

{% block title "Nuevo Alumno"%}

{% block menu_admin_alumnos %}class="active"{% endblock %}

{% block datos %}
    <h1>Alumnos</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Basic</th>
                <th>Studio</th>
                <th>Know</th>
                <th>Other</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('instudentin_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.basic }}</td>
                <td>{{ entity.studio }}</td>
                <td>{{ entity.know }}</td>
                <td>{{ entity.other }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('instudentin_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('instudentin_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('instudentin_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
