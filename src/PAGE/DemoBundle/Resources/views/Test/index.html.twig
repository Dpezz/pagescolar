{% extends 'PAGEDemoBundle:Layout:layout_dashboard.html.twig' %}

{% block title "Evaluaciones"%}

{% block menu_admin_academico %}class="active"{% endblock %}

{% block datos %}
    <h1 class="page-header">Evaluaciones</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Curso</th>
                <th>Asignatura</th>
                <th>Docente</th>
                <th>Título</th>
                <th>Fecha</th>
                <th>Revisión</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('test_show', { 'id': entity.id }) }}" class="badge">{{ loop.index }}</a></td>
                <td>{{ entity.level.name }}</td>
                <td>{{ entity.subject.name }}</td>
                <td>{{ entity.teacher.name }}</td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i') }}{% endif %}</td>
                <td>{% if entity.datescore %}{{ entity.datescore|date('Y-m-d H:i') }}{% endif %}</td>
                <td>
                <ul>
                    <a href="{{ path('test_show', { 'id': entity.id }) }}" class="glyphicon glyphicon-eye-open"></a>&nbsp;
                    <a href="{{ path('test_edit', { 'id': entity.id }) }}" class="glyphicon glyphicon-edit"></a>&nbsp;
                    <a href="{{ path('test_edit', { 'id': entity.id }) }}" class="glyphicon glyphicon-trash text-danger"></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="modal-footer">
        <a href="{{ path('test_new') }}" class="btn btn-mint">Nuevo</a>
    </div>

{% endblock %}
