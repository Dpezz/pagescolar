{{ form_start(form) }}
	{{ form_errors(form) }}

	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				{{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				{{ form_row(form.position,{'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
	</div>
	
	
	<div class="form-group">
		{{ form_row(form.user, {'attr': {'data': app.user.username,'class': 'form-control','readonly':''}}) }}
	</div>
	<div class="modal-footer">
		{{ form_row(form.submit, {'attr': {'class': 'btn btn-mint'}}) }}
	</div>
{{ form_end(form) }}