{% extends 'PAGEDemoBundle:Layout:layout_dashboard.html.twig' %}

{% block title "Cursos"%}

{% block menu_admin_academico %}class="active"{% endblock %}

{% block datos %}
    <h1 class="page-header">Cursos</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>User</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('level_show', { 'id': entity.id }) }}" class="badge">{{ loop.index }}</a></td>
                <td>{{ entity.name }} {{ entity.position }}</td>
                <td>{{ entity.user.username }}</td>
                <td>
                    <a href="{{ path('level_show', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-eye-open"></i></a>&emsp;
                    <a href="{{ path('level_edit', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-edit"></i></a>&emsp;
                    <a href="{{ path('level_edit', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-trash text-danger"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="modal-footer">
        <a href="{{ path('level_new') }}" class="btn btn-mint">Nuevo</a>
    </div>
    {% endblock %}
