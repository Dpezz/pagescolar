		            	<td><span class="">{{loop.index}}</span></td>
		            	<td><span class="text-mint"><strong>{{item}}</strong></span></td>
		            	<td>{{num[loop.index-1]}}</td>
		            	<td>{{por[loop.index-1]}}%</td>
		          	</tr>
		          {% endfor %}
		          <tr class="active">
		          		<td></td>
		            	<td><span class="text-mint"><strong>Total</strong></span></td>
		            	<td>8</td>
		            	<td>100%</td>
		          	</tr>
		        </tbody>
		  	</table>
		</div>
		<div class="col-md-6">
			<table class="table table-hover">
