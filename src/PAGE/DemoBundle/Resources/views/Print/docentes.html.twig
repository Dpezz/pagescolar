{% extends "::base.html.twig" %}


{% block body %}
<div class="container" style="padding:80px">
	<div class="page-header">
		<h3 class="text-center">Estadisticas <small>{{'now'|date('d/m/Y')}}</small></h3>
	</div>

	<div class="row">
		<div class="col-md-6">
		<h6 class="page-header">Asignaturas de Docentes</h6>
			<table class="table table-hover">
		        <thead>
		          <tr>
		            <th>#</th>
		            <th>Asignatura</th>
		            <th>Cantidad Docentes</th>
		            <th>%</th>
		          </tr>
		        </thead>
		        <tbody>
		        {% set num = ['1','2','2','1','1','1'] %}
		        {% set por = ['12.5','25','25','12.5','12.5','12.5'] %}
