{% extends 'PAGEDemoBundle:Layout:layout_dashboard.html.twig' %}

{% block title "Horario"%}

{% block menu_admin_docentes %}class="active"{% endblock %}

{% block datos %}
    <h1>Horario</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{{ entity.day }}</td>
            </tr>
            <tr>
                <th>Block</th>
                <td>{{ entity.block }}</td>
            </tr>
            <tr>
                <th>Createat</th>
                <td>{{ entity.createAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('schedule',{'id': entity.teacher.id}) }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('schedule_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
