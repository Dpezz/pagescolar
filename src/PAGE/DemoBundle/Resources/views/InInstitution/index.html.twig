{% extends 'PAGEDemoBundle:Layout:layout_dashboard.html.twig' %}

{% block title "Institución"%}

{% block menu_admin_cuentas %}class="active"{% endblock %}

{% block datos %}
    <h1>Institución</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Period</th>
                <th>Mode</th>
                <th>Regime</th>
                <th>Date_start</th>
                <th>Date_end</th>
                <th>Createat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ininstitution_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.period }}</td>
                <td>{{ entity.mode }}</td>
                <td>{{ entity.regime }}</td>
                <td>{% if entity.datestart %}{{ entity.datestart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateend %}{{ entity.dateend|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createAt %}{{ entity.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ininstitution_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ininstitution_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ininstitution_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
