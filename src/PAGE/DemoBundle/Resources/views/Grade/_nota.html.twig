{% block academico_nota %}
<div class="row page-header">
	<div class="col-md-8">
		<h4>
			<span class="text-mint">{{dataE.curso}}</span>&nbsp;<i class="fa fa-angle-right"></i>&nbsp;
			<span class="text-muted"><em>{{dataE.asignatura}}</em></span>
			
		</h4>
	</div>
	<div class="col-md-4">
		<h5 class="text-right"><span class="text-mint"><strong>{{dataE.docente}}</strong></span>&nbsp;<i class="fa fa-angle-right"></i>&nbsp;<small class="label label-default">{{ dataE.fecha|date("d/m/Y") }}</small></h5>
	</div>
</div>

<form action="{{path('notas_edit',{'id': dataE.id })}}" method="POST">
	<div class="table-responsive">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>#</th>
					<th>Alumno</th>
					<th>Nota</th>
				</tr>
			</thead>
			<tbody>
				{% for item in dataA %}
				<tr>
					<td><span class="badge">{{loop.index}}</span></td>
					<td>
						<span class="text-mint"><strong>
							{{item.name}}&nbsp;{{item.plastname}}&nbsp;{{item.mlastname}}
						</strong></span>
					</td>
					<td>
						<div class="form-group">
							<input type="text" name="input_{{item.id}}" class="form-control input-sm" 
							value="{% for value in dataN %}{% if value.id == item.id %}{{ value.nota }}{% endif %}{%endfor %}">
						</div>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<div class="modal-footer">
		<a type="button" href="{{path('notas',{'id': id_curso })}}" class="btn btn-default" data-dismiss="modal"><i class="fa fa-long-arrow-left"></i>&nbsp;Volver</a>
		<button class="btn btn-mint" type="submit"><i class="fa fa-save"></i>&nbsp;Guardar</button>
	</div>

</form>
{% endblock %}
