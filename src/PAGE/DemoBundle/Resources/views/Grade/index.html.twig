{% extends 'PAGEDemoBundle:Layout:layout_dashboard.html.twig' %}

{% block title "Notas"%}

{% block menu_admin_academico %}class="active"{% endblock %}

{% block datos %}
    <h1 class="page-header">Notas</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Score</th>
                <th>Createat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('grade_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.score }}</td>
                <td>{% if entity.createAt %}{{ entity.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('grade_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('grade_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="modal-footer">
        <a href="{{ path('grade_new') }}" class="btn btn-mint">Nuevo</a>
    </div>

{% endblock %}
