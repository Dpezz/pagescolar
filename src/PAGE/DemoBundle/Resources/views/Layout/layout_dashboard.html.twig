{% extends 'PAGEDemoBundle:Layout:layout_page.html.twig' %}

{% block title 'Inicio'%}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('bundles/pagedemo/dist/sidebar/sidebar.css')}}">
    <link rel="stylesheet" href="{{ asset('bundles/pagedemo/dist/style/style-sidebar.css')}}">
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="//cdnjs.cloudflare.com/ajax/libs/metisMenu/2.0.2/metisMenu.min.js"></script>
    <script src="{{ asset('bundles/pagedemo/dist/sidebar/sidebar.js')}}"></script>
    <script src="{{ asset('bundles/pagedemo/dist/sidebar/style.js')}}"></script>
{% endblock %}

{% block content %}

  <!-- Fixed navbar -->
  <div class="navbar navbar-static navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle toggle-left hidden-md hidden-lg" data-toggle="sidebar" data-target=".sidebar-left">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#" style="font-family:'Righteous', cursive;color:#eee">
            <i class="fa fa-book"></i>PAGESCOLAR
            </a>
        </div>

        <ul class="nav navbar-nav navbar-right hidden-xs">
          <li>
            <a href="#" data-toggle="sidebar" data-target=".sidebar-right" ><i class="fa fa-globe fa-lg"></i></a>
          </li>
          <li>
            <a href="#" data-toggle="sidebar" data-target=".sidebar-right"><i class="fa fa-bell fa-lg"></i></a>
          </li>
          <li class="active dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
              <span> {{ app.user.username }} </span>&nbsp;
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
                <li><a href="{{path('_profile_secured_account')}}"><i class="fa fa-user text-muted"></i>&nbsp;<span class="text-muted">Perfil</span></a></li>
                <li><a href="{{path('_profile_secured_password')}}"><i class="fa fa-lock text-muted"></i>&nbsp;<span class="text-muted">Password</span></a></li>
                <li class="divider"></li>
              <li><a href="{{path('logout')}}"><i class="fa fa-sign-out text-muted"></i>&nbsp;<span class="text-muted">Cerrar Sesión</span></a></li>
            </ul>
          </li>
        </ul>
          
        <form class="navbar-form navbar-right hidden-xs" role="search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search...">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
            </span>
          </div><!-- /input-group -->
        </form>
    </div>
  </div>

  <!-- Begin page content -->
  <div class="container">
    <div class="row">
      <div class="col-xs-7 col-sm-3 col-md-2 sidebar sidebar-left sidebar-animate sidebar-md-show">
        <ul class="nav navbar-stacked metismenu" id="menu">
          {# ROLE ADMIN #}
          {% if app.user.role == 'ROLE_ADMIN' %}
            <li {% block menu_admin_cuentas %}{% endblock %}>
              <a href="#">Institución<span class="fa arrow"></span></a>
              <ul class="nav nav-second-level">
                {% if app.user.institution %}
                  <li><a href="{{ path('institution_edit',{'id': app.user.institution.id}) }}">&emsp;<i class="fa fa-university"></i>&nbsp;Institución</a></li>
                {% else %}
                  <li><a href="{{ path('institution_new') }}">&emsp;<i class="fa fa-user"></i>&nbsp;Institución</a></li>
                {% endif %}
                <li><a href="{{ path('user') }}">&emsp;<i class="fa fa-user-plus"></i>&nbsp;Usuarios</a></li>
              </ul>
              <!-- /.nav-second-level -->
            </li>

            <li {% block menu_admin_academico %}{% endblock %}>
              <a href="#">Académico<span class="fa arrow"></span></a>
              <ul class="nav nav-second-level">
                <li><a href="{{ path('level') }}">&emsp;<i class="fa fa-graduation-cap"></i>&nbsp;Cursos</a></li>
                <li><a href="{{ path('subject') }}">&emsp;<i class="fa fa-tags"></i>&nbsp;Asignaturas</a></li>
                <li><a href="{{ path('test') }}">&emsp;<i class="fa fa-book"></i>&nbsp;Evaluaciones</a></li>
                <li><a href="{{ path('grade') }}">&emsp;<i class="fa fa-check-circle"></i>&nbsp;Notas</a></li>
                <li><a href="{{ path('callroll') }}">&emsp;<i class="fa fa-clock-o"></i>&nbsp;Asistencias</a></li>
              </ul>
              <!-- /.nav-second-level -->
            </li>

            <li {% block menu_admin_docentes %}{% endblock %}>
              <a href="#">Docentes<span class="fa arrow"></span></a>
              <ul class="nav nav-second-level">
                <li><a href="{{ path('teacher') }}">&emsp;<i class="fa fa-graduation-cap"></i>&nbsp;Docentes</a></li>
              </ul>
              <!-- /.nav-second-level -->
            </li>

            <li {% block menu_admin_alumnos %}{% endblock %}>
              <a href="#">Alumnos<span class="fa arrow"></span></a>
              <ul class="nav nav-second-level">
                <li><a href="{{ path('student') }}">&emsp;<i class="fa fa-users"></i>&nbsp;Alumnos</a></li>
              </ul>
              <!-- /.nav-second-level -->
            </li>

            <li {% block menu_admin_documentos %}{% endblock %}>
              <a href="#">Documentos<span class="fa arrow"></span></a>
              <ul class="nav nav-second-level">
                <li><a href="{{ path('document') }}">&emsp;<i class="fa fa-file-text"></i>&nbsp;Institución</a></li>
              </ul>
              <!-- /.nav-second-level -->
            </li>
              
          {# ROLE SUPER ADMIN #}
          {% elseif app.user.role == 'ROLE_SUPER_ADMIN' %}
            <li {% block menu_one %}{% endblock %}>
              <a href="#">Cuentas<span class="fa arrow"></span></a>
              <ul class="nav nav-second-level">
                <li></li>
              </ul>
              <!-- /.nav-second-level -->
            </li>
          {% endif %}
        </ul>
      </div>

      <div class="main col-md-10 col-md-offset-2">
          {% block datos %}{% endblock %}
      </div>

      <div class="col-xs-7 col-sm-3 col-md-2 sidebar sidebar-right sidebar-animate">
          <ul class="nav navbar-stacked">
              <li class="active"><a href="#">Home</a></li>
              <li><a href="#about">About</a></li>
              <li><a href="#contact">Contact</a></li>
          </ul>
      </div>
    </div>
  </div>
{% endblock %}