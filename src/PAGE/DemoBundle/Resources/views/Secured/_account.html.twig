{% block secured_account %}

	<form action="{{path('_profile_secured_account_post')}}" method="POST">
		<div class="form-group">
			<label class="text-mint">Nombre de Usuario</label>
			<input type="text" class="form-control" name="username" value="{{dataU.username}}" required autofocus>
		</div>

		<div class="form-group">
			<label class="text-mint">Teléfono/Celular</label>
			<input type="text" class="form-control" name="fono" value="{{dataU.fono}}" required autofocus>
		</div>

		<div class="form-group">
			<label class="text-mint">Correo Electrónico</label>
			<input type="email" class="form-control" name="email" value="{{dataU.email}}" required autofocus>
		</div>

		<div class="modal-footer">
			<button type="submit" class="btn btn-mint"><i class="fa fa-save"></i>&nbsp;Guardar</button>
		</div>
	</form>

{% endblock %}